<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="Maze Blob" Height="350" Width="525" MinHeight="350" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Height" Value="40" />
                <Setter Property="Width" Value="100" />
            </Style>
        </Grid.Resources>
        <Image Source="Resources/maze.png" Grid.Row="0"/>
        <StackPanel Name="Menu" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Grid.Row="1">
            <Button Name="SinglePlayer" Content="Single Player" Click="SinglePlayer_Click" />
            <Button Name="MultiPlayer" Content="Multi Player" Click="MultiPlayer_Click" />
            <Button Name="Settings" Content="Settings" Click="Settings_Click" />
        </StackPanel>
    </Grid>
</Window>
