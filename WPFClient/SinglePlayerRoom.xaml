<Window x:Class="WPFClient.SinglePlayerRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:WPFClient.UserControls"
        Title="{Binding Maze.Name}" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Button Content="Solve Maze" Click="SolveMaze_Click" />
            <Button Content="Restart Game" Click="RestartGame_Click" />
            <Button Content="Main Menu" Click="MainMenu_Click" />
        </StackPanel>
        <uc:MazeDisplay x:Name="MazeDisplay" Grid.Row="1" Rows="{Binding Maze.Rows}" Cols="{Binding Maze.Cols}" Maze="{Binding Maze}" MinHeight="300" MinWidth="300"/>
    </Grid>
</Window>
